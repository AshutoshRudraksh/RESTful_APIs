# Environment Variables Configuration
NODE_ENV=development
PORT=3000
GATEWAY_PORT=3001
USER_SERVICE_PORT=3002
PRODUCT_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-environment
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Database Configuration (Mock - for demonstration)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restful_api
DB_USER=api_user
DB_PASSWORD=your_db_password

# Redis Configuration (Mock - for demonstration)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# API Gateway Configuration
GATEWAY_TIMEOUT=30000
GATEWAY_HEALTH_CHECK_INTERVAL=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true

# Service Discovery Configuration
SERVICE_REGISTRY_URL=http://localhost:8500
SERVICE_CHECK_INTERVAL=30000

# Monitoring and Metrics
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_TIMEOUT=5000